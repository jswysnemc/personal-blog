---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../lib/i18n';
import { siteConfig, socialIcons, getIconViewBox, type SocialLink } from '../../lib/site.config';

export const prerender = true;

const lang = 'en';
const t = useTranslations(lang);

// Social link labels
const socialLabels: Record<SocialLink['type'], string> = {
  github: 'GitHub',
  twitter: 'X (Twitter)',
  email: 'Email',
  linkedin: 'LinkedIn',
  weibo: 'Weibo',
  bilibili: 'Bilibili',
  youtube: 'YouTube',
  instagram: 'Instagram',
  website: 'Website',
};
---

<BaseLayout title={t('about.title')} lang={lang}>
  <div class="container-narrow">
    <h1 class="text-4xl font-bold text-primary-900 dark:text-white mb-8">{t('about.title')}</h1>

    <div class="prose prose-lg max-w-none dark:prose-invert">
      <p class="text-xl text-primary-600 dark:text-slate-300 leading-relaxed mb-8">
        {t('about.hello')}
      </p>

      <p>
        {t('about.intro')}
      </p>

      <h2>{t('about.contact')}</h2>
      <p>
        {t('about.contactDesc')}
      </p>

      {siteConfig.socialLinks.length > 0 && (
        <div class="not-prose mt-8">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {siteConfig.socialLinks.map((link) => (
              <a
                href={link.url}
                target={link.type === 'email' ? undefined : '_blank'}
                rel={link.type === 'email' ? undefined : 'noopener noreferrer'}
                class="flex items-center gap-4 p-4 bg-slate-50 dark:bg-slate-800 hover:bg-slate-100 dark:hover:bg-slate-700
                       border border-slate-200 dark:border-slate-700 rounded-xl transition-colors group"
              >
                <div class="w-12 h-12 flex items-center justify-center bg-white dark:bg-slate-900 rounded-lg
                            border border-slate-200 dark:border-slate-600 group-hover:border-slate-300 dark:group-hover:border-slate-500 transition-colors">
                  <svg class="w-6 h-6 text-slate-600 dark:text-slate-400" fill="currentColor" viewBox={getIconViewBox(link.type)}>
                    <path d={socialIcons[link.type]} />
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="font-medium text-slate-900 dark:text-white">
                    {link.label || socialLabels[link.type]}
                  </div>
                  <div class="text-sm text-slate-500 dark:text-slate-400 truncate">
                    {link.type === 'email' ? link.url.replace('mailto:', '') : link.url.replace(/^https?:\/\//, '')}
                  </div>
                </div>
                <svg class="w-5 h-5 text-slate-400 dark:text-slate-500 group-hover:text-slate-600 dark:group-hover:text-slate-300 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
